const int MAX_FLIPS = @MAX_FLIPS@;


// int to control if we use the new version (1) or the old version (0) of sudo_passwd_verify
int new_ver = @VERSION@; // old version = 0, new_version = 1

// Length of passwords
const int size = @SIZE@;

// Types
typedef int[0, 256] byte_t;
typedef int[0, 8] bit_t;

const byte_t nullChar = 0;
const int AUTH_SUCCESS = 12300;
const int AUTH_FAILURE = 10011;

// Currently selected value to flip
bit_t currBit;


// Arguments

byte_t user_pass[size] = @USER_PASS@;
byte_t stored_pass[size] = @STORED_PASS@;


// Memory
typedef struct{
    int returnAddr; // 44(sp)
    int framePtr; // 40(sp)
    int arrIndex1; // -36(s0)
    int sudoAuth; // -40(s0)
    int arrIndex2; // -20(s0)
    int strCmpRes; // -28(s0)
    int ret; // -24(s0)
} memory_t;

// Registers

int sp;
int ra;
int s0;
int a0;
int a1;
int a2;
int a3;
int a4;
int a5;



const int zero = 0;

int pwr(int num, int pwr){
    int res = 1;
    if(pwr == 0)
        return res;
    while(pwr &gt; 0){
        res = res * num;
        pwr--;
    }
    return res;
}





    
